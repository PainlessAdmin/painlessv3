---
/**
 * CALCULATOR LAYOUT
 *
 * Main layout wrapper for calculator pages
 */

import '@/styles/global.css';
import { ProgressBarReact } from './ProgressBarReact';

interface Props {
  title?: string;
  description?: string;
  currentStep?: number;
}

const {
  title = 'Calculator',
  description = 'Get your custom quote',
  currentStep = 1,
} = Astro.props;

// Google Maps API key for address autocomplete
// Try Cloudflare runtime env first (SSR), then fallback to build-time env
const runtime = Astro.locals?.runtime;
const googleMapsApiKey = runtime?.env?.GOOGLE_MAPS_API_KEY
  || import.meta.env.GOOGLE_MAPS_API_KEY
  || '';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Calculator Boilerplate</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    {/* Google Maps API key for async loading (used by google-maps-loader.ts) */}
    {googleMapsApiKey && (
      <meta name="google-maps-api-key" content={googleMapsApiKey} />
    )}
  </head>
  <body class="min-h-screen bg-background antialiased flex flex-col">
    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6 flex-1">
      <!-- Progress Bar - full width on desktop (max-w-4xl) -->
      <div class="max-w-4xl mx-auto mb-6">
        <ProgressBarReact client:load currentStep={currentStep} />
      </div>

      <!-- Calculator Content - narrower on desktop (max-w-3xl = 768px), full width on mobile -->
      <div class="max-w-3xl mx-auto">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t mt-auto">
      <div class="container mx-auto px-4 py-6">
        <div class="text-center text-sm text-muted-foreground">
          <p>&copy; {new Date().getFullYear()} Painless Removals. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
