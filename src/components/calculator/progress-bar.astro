---
/**
 * PROGRESS BAR (Astro)
 *
 * Clickable numbered circles for step navigation.
 * Enhanced with new design patterns - horizontal scrollable on mobile.
 */

interface Props {
  currentStep: number;
  totalSteps?: number;
  className?: string;
}

const { currentStep, totalSteps = 12, className = '' } = Astro.props;
---

<div class={`mb-8 md:mb-12 overflow-x-auto py-2 ${className}`}>
  <div class="flex items-center justify-start md:justify-center gap-2 min-w-max px-4">
    {Array.from({ length: totalSteps }, (_, i) => i + 1).map((step) => {
      const isCompleted = step < currentStep;
      const isActive = step === currentStep;
      const isFuture = step > currentStep;

      return (
        <div class="flex items-center">
          {/* Step Circle */}
          {isCompleted ? (
            <a
              href={`/calculator/step-${step.toString().padStart(2, '0')}`}
              class="progress-circle progress-circle-completed"
              aria-label={`Go back to step ${step}`}
            >
              <span class="text-xs">âœ“</span>
            </a>
          ) : (
            <div
              class:list={[
                'progress-circle',
                isActive && 'progress-circle-active',
                isFuture && 'bg-gray-200 text-gray-400',
              ]}
              aria-label={isActive ? `Current step: ${step}` : `Step ${step}`}
              aria-current={isActive ? 'step' : undefined}
            >
              {step}
            </div>
          )}

          {/* Connector Line */}
          {step < totalSteps && (
            <div
              class:list={[
                'w-4 md:w-6 h-0.5 transition-all duration-300',
                isCompleted ? 'bg-emerald-500' : 'bg-gray-200',
              ]}
            />
          )}
        </div>
      );
    })}
  </div>
</div>
